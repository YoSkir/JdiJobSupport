<Window x:Class="JDI_ReportMaker.PopupWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:JDI_ReportMaker"
    mc:Ignorable="d"
    Title="錯誤訊息" Height="250" Width="500">
    <Grid>
        <TextBlock x:Name="errorMessageTextbox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="176" Width="480" Margin="0,10,0,0" Foreground="White"/>
        <Button x:Name="popupWindowCloseButton" Content="關閉" HorizontalAlignment="Center" Margin="0,191,0,0" VerticalAlignment="Top" Height="36" Width="84" FontSize="16" Click="popupWindowCloseButton_Click"/>

    </Grid>
</Window>
